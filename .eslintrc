{
  "plugins": [
    "react"
  ],
  "ecmaFeatures": {
    "modules": true,
    "jsx": true
  },
  "rules": {
    "quotes": [2, "single"],
    "camelcase": [2,
      {
        "properties": "always"
      }
    ],
    "strict": 0,
    "indent": [2, 2],
    "new-cap": [2,
      {
        "capIsNewExceptions": [
          "Server"
        ]
      }
    ],
    "curly": [2, "multi-line"],
    "no-multiple-empty-lines": [1,
      {
        "max": 2
      }
    ],
    "max-len": [1, 80, 2],
    "space-after-keywords": [2, "always"],
    "space-before-blocks": [2, "always"]
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "browser": true
  }
}
